{
  "ensure_final_newline_on_save": true,
  "formatter": {
    "external": {
      "command": "./node_modules/.bin/biome",
      "arguments": ["check", "--stdin-file-path", "{buffer_path}", "--apply"]
    }
  },
  "remove_trailing_whitespace_on_save": true,
  "language_server": {
    "enable": true,
    "settings": {
      "performance": {
        "max_memory": 4096,
        "max_cpu": 2
      },
      "features": {
        "auto_complete": true,
        "hover": true,
        "signature_help": true
      }
    }
  }
}
